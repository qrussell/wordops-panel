[Unit]
Description=WordPanel - WordOps GUI
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/wordpanel
Environment="PATH=/opt/wordpanel/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
ExecStart=/opt/wordpanel/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always

[Install]
WantedBy=multi-user.target
